rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'salunkheamit22@gmail.com' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Users: Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // App Settings: Everyone can read, only Admins can write
    match /appSettings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Content (Abhangs, Categories, Sants): Everyone can read, only Admins can write
    match /abhangs/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /categories/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /sants/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
